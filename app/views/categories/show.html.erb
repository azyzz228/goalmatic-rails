
<div class="container">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <div class="flex flex-row justify-between items-center my-12">
        <p class="text-3xl text-slate-900 font-bold">Category</p>
        <%= link_to 'Back to categories', categories_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    </div>

    <!-- Category name -->
    <div class="">
        <%= render @category %>
    </div>

    <!-- Category Actions -->
    <div class="flex flex-row space-x-4 items-center justify-start">
        <%= link_to "Edit", edit_category_path, class: "bg-slate-200 hover:bg-slate-300 text-slate-500 px-5 py-3 rounded-md" %>
        <%= button_to "Delete", category_path(@category), method: :delete, class: "bg-red-100 hover:bg-red-200 text-red-500 px-5 py-3 rounded-md" %>
    </div>

</div>
