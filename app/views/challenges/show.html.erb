<div class="mx-auto md:w-2/3 w-full flex mb-12">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @challenge %>
  <div class="my-8">

    <div class="flex flex-row items-center justify-start px-4 py-4 border-b  font-medium  text-slate-400 text-left bg-slate-100 rounded-t-md">
      <p class="w-1/3">Amount (<%= @challenge.units %>)</p>
      <p class="flex-1">Notes</p>
      <%= link_to "add", new_challenge_activity_path(@challenge), class:"bg-slate-200 hover:bg-slate-300 text-slate-500 px-2 py-1 rounded-md text-sm" %>
    </div>

    <% @activities.each do |activity| %>
      <%= render partial:"activities/activity_listing", locals: { challenge: @challenge, activity: activity } %>
    <% end %>

  </div>
    <%= link_to 'Edit this challenge', edit_challenge_path(@challenge), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this challenge', challenge_path(@challenge), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to 'Back to challenges', challenges_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>

</div>
