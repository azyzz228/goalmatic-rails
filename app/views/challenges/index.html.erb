<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>





  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Challenges</h1>
    <div class="flex flex-row items-center justify-start rounded-lg py-3 px-5 bg-blue-600 text-white space-x-4">
      <%= link_to 'New challenge', new_challenge_path, class: "font-medium" %>
      <i class="fa-solid fa-plus"></i>
    </div>
  </div>

  <div class="bg-slate-100 rounded-lg my-12">
    <div class="relative rounded-xl overflow-auto">
      <div class="shadow-sm overflow-hidden my-8">
        <table class="border-collapse table-fixed w-full text-sm">
          <thead>
            <tr>
              <th class="border-b dark:border-slate-600 font-medium p-4 pl-8 pt-0 pb-3 text-slate-400 dark:text-slate-200 text-left">Title</th>
              <th class="border-b dark:border-slate-600 font-medium p-4 pt-0 pb-3 text-slate-400 dark:text-slate-200 text-left">Category</th>
              <th class="border-b dark:border-slate-600 font-medium p-4 pr-8 pt-0 pb-3 text-slate-400 dark:text-slate-200 text-left">Goal</th>
              <th class="border-b dark:border-slate-600 font-medium p-4 pr-8 pt-0 pb-3 text-slate-400 dark:text-slate-200 text-left">Progress</th>
              <th class="border-b dark:border-slate-600 font-medium p-4 pr-8 pt-0 pb-3 text-slate-400 dark:text-slate-200 text-left">Ends at</th>
              <th class="border-b dark:border-slate-600 font-medium p-4 pr-8 pt-0 pb-3 text-slate-400 dark:text-slate-200 text-left"></th>
            </tr>
          </thead>
          
          <tbody class="bg-white dark:bg-slate-800">
            <% @challenges.each do |challenge| %>
              <tr class=" even:bg-slate-50 hover:bg-slate-50">
                <td class="border-b border-slate-100 dark:border-slate-700 p-4 pl-8 text-slate-500 dark:text-slate-400"><%= challenge.name %></td>
                <td class="border-b border-slate-100 dark:border-slate-700 p-4 text-slate-500 dark:text-slate-400"><%= Category.find(challenge.category_id).name %></td>
                <td class="border-b border-slate-100 dark:border-slate-700 p-4 pr-8 text-slate-500 dark:text-slate-400"><%= challenge.goal %> <%= challenge.units %></td>
                <td class="border-b border-slate-100 dark:border-slate-700 p-4 pr-8 text-slate-500 dark:text-slate-400"><%= challenge.progress %></td>
                <td class="border-b border-slate-100 dark:border-slate-700 p-4 pr-8 text-slate-500 dark:text-slate-400"><%= challenge.ends_at %></td>
                <td class="border-b border-slate-100 dark:border-slate-700 p-4 pr-8 text-slate-500 dark:text-slate-400">
                  <div class="">
                    <%= link_to "Show", challenge, class:"bg-slate-200 hover:bg-slate-300 text-slate-500 px-2 py-1 rounded-md text-sm" %>
                    <%= link_to "Edit", edit_challenge_path(challenge), class:"bg-slate-200 hover:bg-slate-300 text-slate-500 px-2 py-1 rounded-md text-sm" %>
                  </div> 
                </td>
              </tr>
            <% end %>
          </tbody>

        </table>
      </div>
    </div>
  </div>

  <%# <div id="challenges" class="min-w-full">
    <%= render @challenges %>
  <%# </div>  %>
</div>
